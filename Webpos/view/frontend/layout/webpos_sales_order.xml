<page layout='webpos' xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" >
    <body>
        <referenceBlock name="webpos.page">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="webpos.container" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="orders_history" xsi:type="array">
                                    <item name="component" xsi:type="string">Bkademy_Webpos/js/view/container/orders_history</item>
                                    <item name="displayArea" xsi:type="string">orders_history</item>
                                    <item name="children" xsi:type="array">
                                        <item name="orders_history" xsi:type="array">
                                            <item name="component" xsi:type="string">Bkademy_Webpos/js/view/sales/order/list</item>
                                            <item name="displayArea" xsi:type="string">order.list</item>
                                            <item name="children" xsi:type="array">
                                                <item name="customer.view" xsi:type="array">
                                                    <item name="sortOrder" xsi:type="string">0</item>
                                                    <item name="component" xsi:type="string">Bkademy_Webpos/js/view/sales/order/view</item>
                                                    <item name="displayArea" xsi:type="string">order-view</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>


